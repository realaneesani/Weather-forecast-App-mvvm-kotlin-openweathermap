<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/design_default_color_background"
    tools:context=".MainActivity">


    <FrameLayout
        android:visibility="gone"
        android:id="@+id/f_errorScreen"
        android:background="@color/screenErBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="54sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/rthin"
                android:text="Something went wrong at our end!"/>
            <Button
                android:id="@+id/retry"
                android:layout_marginTop="44dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RETRY"
                android:backgroundTint="@color/retryBG"/>
        </LinearLayout>



    </FrameLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/f_wetherScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgCOlor"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="56dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="62dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/tempature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="96sp"
                    android:gravity="center"
                    android:fontFamily="@font/rblack"
                    android:textColor="@color/listtextColor"
                    />
                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:fontFamily="@font/rthin"
                    android:textColor="@color/subtextColor"
                    android:text="20"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/day1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:text="Monday"
                            android:fontFamily="@font/rregular"
                            android:textSize="16sp"
                            android:textColor="@color/listtextColor"

                            />
                        <TextView
                            android:id="@+id/temp1"
                            android:fontFamily="@font/rregular"

                            android:text="24c"
                            android:gravity="end"
                            android:textSize="16sp"
                            android:textColor="@color/listtextColor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/day2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:text="Monday"
                            android:fontFamily="@font/rregular"

                            android:textSize="16sp"
                            android:textColor="@color/listtextColor"

                            />
                        <TextView
                            android:id="@+id/temp2"
                            android:text="24c"
                            android:gravity="end"
                            android:fontFamily="@font/rregular"

                            android:textSize="16sp"
                            android:textColor="@color/listtextColor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/day3"
                            android:fontFamily="@font/rregular"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:text="Monday"
                            android:textSize="16sp"
                            android:textColor="@color/listtextColor"

                            />

                        <TextView
                            android:id="@+id/temp3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:fontFamily="@font/rregular"

                            android:gravity="end"
                            android:text="24c"
                            android:textColor="@color/listtextColor"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/day4"
                            android:fontFamily="@font/rregular"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:text="Monday"
                            android:textSize="16sp"
                            android:textColor="@color/listtextColor"

                            />

                        <TextView
                            android:id="@+id/temp4"
                            android:fontFamily="@font/rregular"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="end"
                            android:text="24c"
                            android:textColor="@color/listtextColor"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>





        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:visibility="visible"
        android:id="@+id/floading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/loading"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_autorenew_24"/>


        </LinearLayout>

    </FrameLayout>


</LinearLayout>